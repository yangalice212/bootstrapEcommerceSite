  <main class="container px-0 px-md-4 mb-md-8">
    <div class="row g-0 g-md-4 align-items-start">
      <div class="col-md-8">
        <%- contents %>
      </div>
      <div class="col-md-4 d-none d-md-block">
        <div class="text-warning mb-4">
          <h2 class="h4 bg-info pb-3 pt-3 text-center mb-0">訂單摘要</h2>
          <div class="pt-2 px-2 border border-info">
